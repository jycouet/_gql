{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist/",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "strict": true,
      "baseUrl": "./",
      "lib": [
        "es2017",
        "dom",
        "esnext.asynciterable"
      ],
      "paths": {
        "@graphql-global/*": ["./src/_gql/*"],
        "@books/*": ["./src/gql_modules/books/*"],
        "@demo/*": ["./src/gql_modules/demo/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "node_modules"
    ],
    "files": [
      "src/typings/modules.d.ts",
      "src/index.ts"
    ]
  }
  